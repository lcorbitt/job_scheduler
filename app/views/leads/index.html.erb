<h1>Leads</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Employee</th>
      <th>Status</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= full_name(lead) %></td>
        <td><%= lead.company_name %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.email %></td>
        <td><%= to_name(lead.user_id) %></td>
        <td><%= readable_status(lead.status) %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Delete', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', new_lead_path %>
